# =============================================================================
# MCP Client with OAuth2 - Environment Variables Template
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git!

# =============================================================================
# OAuth Configuration
# =============================================================================

# OAuth Redirect URI (where Okta redirects after login)
# For local dev: http://localhost:3000/api/auth/callback
# For production: https://your-domain.com/api/auth/callback
NEXT_PUBLIC_OAUTH_REDIRECT_URI=http://localhost:3000/api/auth/callback

# =============================================================================
# Okta Configuration
# =============================================================================
# Get these values from your Okta Admin Console > Applications > Your App

# Okta Issuer URL (usually ends with /oauth2/default)
NEXT_PUBLIC_OKTA_ISSUER=https://your-okta-domain.okta.com/oauth2/default

# Okta Authorization Endpoint
NEXT_PUBLIC_OKTA_AUTH_ENDPOINT=https://your-okta-domain.okta.com/oauth2/default/v1/authorize

# Okta Token Endpoint
NEXT_PUBLIC_OKTA_TOKEN_ENDPOINT=https://your-okta-domain.okta.com/oauth2/default/v1/token

# Okta Client ID (from your Okta application)
NEXT_PUBLIC_OKTA_CLIENT_ID=your-client-id-here

# =============================================================================
# ⚠️ IMPORTANT: Client Secret (SERVER-SIDE ONLY!)
# =============================================================================
# This is NOT exposed to the browser (no NEXT_PUBLIC_ prefix)
# Keep this secret! Never commit it to git!
# Get this from: Okta Admin Console > Applications > Your App > Client Credentials

OKTA_CLIENT_SECRET=your-client-secret-here

# =============================================================================
# OAuth Scopes
# =============================================================================
# Scopes to request during OAuth flow
# Common scopes: openid, profile, email, groups
# Add 'groups' if you need ABAC (Attribute-Based Access Control)

NEXT_PUBLIC_OKTA_SCOPES=openid profile groups

# =============================================================================
# MCP Endpoint Configuration
# =============================================================================
# Default MCP endpoint URL (can be changed in the UI)
# Example: https://your-mcp-server.cloudhub.io/mcp-endpoint/

NEXT_PUBLIC_DEFAULT_MCP_ENDPOINT=https://your-mcp-endpoint-url-here/

# =============================================================================
# App Configuration
# =============================================================================
# Base URL of your application
# For local dev: http://localhost:3000
# For production: https://your-domain.com

NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# Optional: Additional Configuration
# =============================================================================

# Node Environment (usually set automatically)
# NODE_ENV=development

# Port (usually set automatically by Next.js)
# PORT=3000

